<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearningPlatform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LearningPlatform.styles.css" asp-append-version="true" />
</head>

    <header>
<nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: rgba(0, 0, 0, 0.5) !important; position: fixed; top: 0; left: 0; width: 100%; z-index: 9999; padding: 1rem 2rem !important;">
    <div class="container-fluid">
        <!-- Brand Style -->
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: white !important; font-weight: bold !important; text-transform: uppercase !important; padding: 0.5rem 1rem !important; transition: color 0.3s ease !important;">
            LearningPlatform
        </a>
        
        <!-- Toggler Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation" style="border: none !important;">
            <span class="navbar-toggler-icon" style="background-color: white !important;"></span>
        </button>
        
        <!-- Navbar Links with Hover Effect -->
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index" style="color: white !important; padding: 0.5rem 1rem !important; text-transform: uppercase !important; transition: color 0.3s ease !important;" onmouseover="this.style.color='#A6E1FA'" onmouseout="this.style.color='white'">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link " asp-area="" asp-controller="Course" asp-action="Index" style="color: white !important; padding: 0.5rem 1rem !important; text-transform: uppercase !important; transition: color 0.3s ease !important;" onmouseover="this.style.color='#A6E1FA'" onmouseout="this.style.color='white'">Courses</a>
                </li>
                @if (User.IsInRole("Student"))
                {
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Enrollment" asp-action="MyCourses" style="color: white !important; padding: 0.5rem 1rem !important; text-transform: uppercase !important; transition: color 0.3s ease !important;" onmouseover="this.style.color='#A6E1FA'" onmouseout="this.style.color='white'">MyCourses</a>
                    </li>
                }
                @if (User.IsInRole("Instructor"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Course" asp-action="MyCourses" style="color: white !important; padding: 0.5rem 1rem !important; text-transform: uppercase !important; transition: color 0.3s ease !important;" onmouseover="this.style.color='#A6E1FA'" onmouseout="this.style.color='white'">MyCourses</a>
                    </li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="@Url.Action("Logout", "Auth")" class="nav-link" style="color: white !important; padding: 0.5rem 1rem !important; text-transform: uppercase !important; transition: color 0.3s ease !important;" onmouseover="this.style.color='#A6E1FA'" onmouseout="this.style.color='white'">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="@Url.Action("Login", "Auth")" class="nav-link" style="color: white !important; padding: 0.5rem 1rem !important; text-transform: uppercase !important; transition: color 0.3s ease !important;" onmouseover="this.style.color='#A6E1FA'" onmouseout="this.style.color='white'">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Register", "Auth")" class="nav-link" style="color: white !important; padding: 0.5rem 1rem !important; text-transform: uppercase !important; transition: color 0.3s ease !important;" onmouseover="this.style.color='#A6E1FA'" onmouseout="this.style.color='white'">Register</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<!-- Body Content -->





    </header>
 
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</html>
