@model Lesson

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lesson Detail</title>
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
            padding: 80px;
        }
        .container {
            background-color: rgba(0, 0, 0, 0.6); /* Transparent black background */
            color: white;
            padding: 40px;
            border-radius: 8px;
            width: 100%;
            max-width: 600px;
            margin: auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        h3 {
            font-size: 1.8rem;
            margin-bottom: 1rem;
            text-align: center;
        }
        p {
            font-size: 1.2rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }
        .btn-primary {
            background-color: #258cfb;
            color: white;
            padding: 0.7rem 1.5rem;
            border-radius: 4px;
            border: none;
            display: block;
            margin: 0 auto;
            cursor: pointer;
            text-align: center;
        }
        .btn-primary:hover {
            background-color: #1c76d1;
        }
        .btn-primary:active {
            background-color: #145ea7;
        }
    </style>
</head>
<body>

<div class="container">
    <h3>@Model.Title</h3>
    <p>@Model.Content</p>
    <a href="@Url.Action("Detail", "Course", new { id = Model.CourseId })" class="btn btn-primary">Go Back</a>
</div>

</body>
</html>
