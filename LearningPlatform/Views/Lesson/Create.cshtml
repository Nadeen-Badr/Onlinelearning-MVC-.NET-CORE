@model Lesson

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Lesson</title>
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
            padding: 80px;
        }
        h1 {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 2rem;
        }
        .form-container {
            background-color: rgba(0, 0, 0, 0.6);
            color: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 600px;
            margin: auto;
        }
        .form-group {
            margin-bottom: 1rem;
        }
        .form-group label {
            display: block;
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }
        .form-control {
            width: 100%;
            padding: 0.8rem;
            font-size: 1rem;
            border-radius: 4px;
            border: 1px solid #ddd;
            background-color: #fff;
            color: #333;
        }
        .form-control:focus {
            outline: none;
            border-color: #258cfb;
            box-shadow: 0 0 5px rgba(37, 140, 251, 0.6);
        }
        .btn-primary {
            background-color: #258cfb;
            color: white;
            padding: 0.7rem 1.5rem;
            border-radius: 4px;
            border: none;
            cursor: pointer;
        }
        .btn-primary:hover {
            background-color: #1c76d1;
        }
        .btn-primary:active {
            background-color: #145ea7;
        }
    </style>
</head>
<body>

<h1>Create Lesson</h1>

<div class="form-container">
    <form asp-action="Create" asp-controller="Lesson" method="post">
        <div class="form-group">
            <label asp-for="Title">Lesson Title</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Content">Lesson Content</label>
            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        </div>

        <!-- Hidden input for CourseId -->
        <input type="hidden" name="CourseId" value="@Model.CourseId" />

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

</body>
</html>
