@model IEnumerable<Course>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Courses</title>
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
            padding: 80px;
        }
        .course-card {
            background-color: rgba(0, 0, 0, 0.8);
            color: white;
            border-radius: 8px;
            padding: 2rem;
            margin: 1rem;
            width: 300px;
            display: inline-block;
            vertical-align: top;
            text-align: center;
        }
        .course-card img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .course-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin: 1rem 0;
        }
        .course-description {
            font-size: 1rem;
            margin-bottom: 1rem;
        }
        .btn {
            padding: 0.5rem 1rem;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            font-size: 1rem;
            margin-top: 1rem;
            transition: background-color 0.3s ease;
        }
        .btn-primary {
            background-color: #258cfb;
            color: white;
        }
        .btn-primary:hover {
            background-color: #1a6db8;
        }
        .btn-info {
            background-color: #17a2b8;
            color: white;
        }
        .btn-info:hover {
            background-color: #138f99;
        }
        .btn-danger {
            background-color: red;
            color: white;
        }
        .btn-danger:hover {
            background-color: darkred;
        }
        .create-btn {
            background-color: #17a2b8;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            margin: 1rem 0;
            display: block;
            text-align: center;
            width: 200px;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>
<body>

<h1>My Courses</h1>

<a href="@Url.Action("Create", "Course")" class="create-btn">Create New Course</a>

<div class="courses-container">
    @foreach (var course in Model)
    {
        <div class="course-card">
            <h2 class="course-title">@course.Title</h2>
            <p class="course-description">@course.Description</p>
            <img src="@course.ImageUrl" alt="@course.Title" />
            
            <!-- Edit button -->
            <a href="@Url.Action("Edit", "Course", new { id = course.CourseId })" class="btn btn-info">Edit</a>

            <!-- Delete button -->
            <form asp-action="ConfirmDelete" method="get" asp-route-id="@course.CourseId" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

            <!-- Detail button -->
            <a href="@Url.Action("Detail", "Course", new { id = course.CourseId })" class="btn btn-info">Detail</a>
        </div>
    }
</div>

</body>
</html>
